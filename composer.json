{
	"name": "trejjam/mail-chimp",
	"description": "MailChimp client for Nette",
	"keywords": [
		"nette",
		"mailChimp"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Jan Trejbal"
		}
	],
	"require": {
		"php": ">=7.1",

		"composer/ca-bundle": "^1.1",
		"nette/di": "^3.0",
		"guzzlehttp/guzzle": "^6.3",
		"trejjam/base-extension": "^0.8",
		"tharos/schematic": "^1.2",
		"thecodingmachine/safe": "^1.0"
	},
	"require-dev": {
		"nette/robot-loader": "^3.1",
		"nette/bootstrap": "^2.4.6 || ^3.0",
		"tracy/tracy": "^2.4 || ^3.0",

		"nette/tester": "^2.2",

		"phpstan/phpstan": "^0.12",
		"phpstan/phpstan-deprecation-rules": "^0.12",
		"phpstan/phpstan-strict-rules": "^0.12",
		"thecodingmachine/phpstan-safe-rule": "^1",
		"roave/no-floaters": "^1.1.0",

		"symplify/easy-coding-standard": "^7.0",

		"sensiolabs/security-checker": "^6.0",
		"roave/security-advisories": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Trejjam\\MailChimp\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Trejjam\\MailChimp\\Tests\\": "tests/src/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"phpstan": [
			"vendor/bin/phpstan analyse -l max -c tests/config/phpstan.neon src tests/src tests/cases"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-master": "v0.4.x-dev"
		}
	}
}
